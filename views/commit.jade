extends ./layout.jade

block title
    title Accessibility report for #{repo}

block content
    h1!= repo
        img#badge
    table.table.table-hover.tablesorter
        thead
            tr
                td url
                td errors
                td warnings
                td notices
                td total
        tbody
            each result in results
                tr
                    td #{result.url}
                    td #{result.error}
                    td #{result.warning}
                    td #{result.notice}
                    td #{result.total}

block extra_js
    script(src="/js/jquery.tablesorter.min.js")

block script
    script.
        $(document).ready(function (){
            $("#badge").attr("src","/#{repo}"+".svg");
            $(".table").tablesorter({
                theme: "blue"
                });
        });